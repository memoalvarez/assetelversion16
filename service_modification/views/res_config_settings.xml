<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_invoicing_inherit_service_modification" model="ir.ui.view">
    <field name="name">res.config.settings.invoicing.inherit.service.modification</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">

        <xpath expr="//div[@id='analytic']" position="after">
            <h2>Suscripciones</h2>

            <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                  <span class="o_form_label">Responsable de suscripciones</span>
                  <div class="text-muted">
                  Configure el usuario encargado de suscripciones.
                  </div>
                  <div class="row mt16">
                    <label string="Usuario" for="subscription_user_id" class="col-lg-3 o_light_label"/>
                    <field name="subscription_user_id"/>
                  </div>
                </div>
              </div>
            </div>
        </xpath>

    </field>
  </record>

</odoo>

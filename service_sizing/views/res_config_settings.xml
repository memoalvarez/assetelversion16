<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_crm_inherit_service_sizing" model="ir.ui.view">
    <field name="name">res.config.settings.crm.inherit.service.sizing</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
    <field name="arch" type="xml">

        <xpath expr="//div[@data-string='CRM']" position="inside">
            <h2>Dimensionamiento</h2>

            <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                  <span class="o_form_label">Proyecto de dimensionamiento</span>
                  <div class="text-muted">
                  Configure el proyecto donde se crearan las tareas de dimensionamiento.
                  </div>
                  <div class="row mt16">
                    <label string="Proyecto" for="sizing_project_id" class="col-lg-3 o_light_label"/>
                    <field name="sizing_project_id"/>
                  </div>
                </div>
              </div>
            </div>
        </xpath>

    </field>
  </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="sale_subscription_inherit_customer_site" model="ir.ui.view">
    <field name="name">sale.subscription.inherit.customer.site</field>
    <field name="model">sale.subscription</field>
    <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
    <field name="arch" type="xml">

      <xpath expr="//form[1]/sheet[1]/div[not(@name)][3]/notebook[1]/page[1]/div[1]/field[@name='recurring_invoice_line_ids']/tree[1]/field[@name='name']" position="after">
        <field name="site" required="1" domain="[('type', '=', 'site')]"/>
      </xpath>

    </field>
  </record>

</odoo>

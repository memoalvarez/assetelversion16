<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="get_assetel_afiliacion_view" model="ir.actions.act_window">
        <field name="name">Flujo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">assetel.partners</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Agrega un nuevo Partner
            </p>
        </field>
    </record>

    <record id="get_assetel_partners_view" model="ir.actions.act_window">
        <field name="name">Partners</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'create': False}</field>
        <field name="domain">[('grade_id','!=',False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Agrega un nuevo Partner
            </p>
        </field>
    </record>
    
    <record id="action_partner_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="base.res_partner_kanban_view"/>
        <field name="act_window_id" ref="get_assetel_partners_view"/>
    </record>

    <record id="action_partner_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="assetel_partners.partner_view_tree"/>
        <field name="act_window_id" ref="get_assetel_partners_view"/>
    </record>
    <record id="action_partner_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="assetel_partners.partner_view_form"/>
        <field name="act_window_id" ref="get_assetel_partners_view"/>
    </record>

    <record id="assetel_partners.partners_view_menu" model="ir.ui.menu">
        <field name="action" eval="False"/>
        <field name="active" eval="True"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="name">Partners</field>
        <field name="parent_id" eval="False"/>
        <field name="sequence">10</field>
        <field name="web_icon">fa fa-universal-access,#FFFFFF,#34495e</field>
    </record>

    <record id="assetel_partners.partner_afiliacion_menu" model="ir.ui.menu">
        <field name="action" ref="assetel_partners.get_assetel_afiliacion_view"/>
        <field name="active" eval="True"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="name">Afiliacion</field>
        <field name="parent_id" ref="assetel_partners.partners_view_menu"/>
        <field name="sequence">10</field>
        <field name="web_icon" eval="False"/>
    </record>
    <record id="assetel_partners.partners_partner_menu" model="ir.ui.menu">
        <field name="action" ref="assetel_partners.get_assetel_partners_view"/>
        <field name="active" eval="True"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="name">Partners</field>
        <field name="parent_id" ref="assetel_partners.partners_view_menu"/>
        <field name="sequence">10</field>
        <field name="web_icon" eval="False"/>
    </record>
</odoo>
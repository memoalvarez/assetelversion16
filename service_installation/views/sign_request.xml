<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="sign_request_inherit_service_installation" model="ir.ui.view">
    <field name="name">sign.request.inherit.service.installation</field>
    <field name="model">sign.request</field>
    <field name="inherit_id" ref="sign.sign_request_view_form"/>
    <field name="arch" type="xml">

      <xpath expr="//div[@name='button_box']" position="inside">
          <button type="object" name="action_view_task_service_installation" class="oe_stat_button" icon="fa-tasks" attrs="{'invisible': [('project_task', '=', False)]}" string="Tarea de proyecto"/>
          <field name="project_task" invisible="1"/>
      </xpath>

    </field>
  </record>

</odoo>

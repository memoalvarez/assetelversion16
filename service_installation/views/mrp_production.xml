<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="mrp_production_inherit_service_installation" model="ir.ui.view">
    <field name="name">mrp.production.inherit.service.installation</field>
    <field name="model">mrp.production</field>
    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
    <field name="arch" type="xml">

        <xpath expr="//field[@name='product_id']" position="attributes">
            <attribute name="domain">[('bom_ids', '!=', False), ('bom_ids.active', '=', True), ('bom_ids.type', '=', 'normal')]</attribute>
        </xpath>

        <xpath expr="//div[@name='button_box']" position="inside">
          <field name="project_task" invisible="1"/>
          <button type="object" name="action_view_project_task" class="oe_stat_button" icon="fa-tasks" attrs="{'invisible': [('project_task', '=', False)]}" string="Tarea de proyecto"/>
        </xpath>

    </field>
  </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="sign_template_inherit_service_installation" model="ir.ui.view">
    <field name="name">sign.template.inherit.service.installation</field>
    <field name="model">sign.template</field>
    <field name="inherit_id" ref="sign.sign_template_view_form"/>
    <field name="arch" type="xml">

        <xpath expr="//field[@name='tag_ids']" position="before">
          <field name="project_task" invisible="1"/>
        </xpath>
        <xpath expr="//div[@name='button_box']" position="inside">
          <button type="object" name="action_view_project_task" class="oe_stat_button" icon="fa-tasks" attrs="{'invisible': [('project_task', '=', False)]}" string="Tarea de proyecto"/>
          <field name="project_task" invisible="1"/>
      </xpath>

    </field>
  </record>

</odoo>

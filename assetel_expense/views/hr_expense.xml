<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="hr_expense_form_inherit_assetel_expense" model="ir.ui.view">
    <field name="name">hr.expense.form.inherit.assetel.expense</field>
    <field name="model">hr.expense</field>
    <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
    <field name="arch" type="xml">

      <xpath expr="//label[@id='lo']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='payment_mode']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//label[@id='lo']" position="before">
        <field name="expense_type"/>
        <field name="supplier_id" domain="[('type', '=', 'invoice'), ('is_company', '=', True)]"/>
      </xpath>

    </field>
  </record>

</odoo>

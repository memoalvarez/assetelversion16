<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="sale_order_inherit_sale_order" model="ir.ui.view">
    <field name="name">sale.order.inherit.sale.order</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <xpath expr="//field[@name='pricelist_id']" position="before">
        <field name="date_order" attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
      </xpath>

    </field>
  </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="sign_template_inherit_assetel_reports" model="ir.ui.view">
    <field name="name">sign.template.inherit.assetel.reports</field>
    <field name="model">sign.template</field>
    <field name="inherit_id" ref="sign.sign_template_view_form"/>
    <field name="arch" type="xml">

        <xpath expr="//field[@name='tag_ids']" position="before">
          <field name="responsive" invisible="1"/>
        </xpath>
        <xpath expr="//div[@name='button_box']" position="inside">
          <button type="object" name="action_view_task" class="oe_stat_button" icon="fa-cubes" attrs="{'invisible': [('responsive', '=', False)]}" string="Orden de entrega"/>
          <field name="responsive" invisible="1"/>
      </xpath>

    </field>
  </record>

</odoo>

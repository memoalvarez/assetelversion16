<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="helpdesk_ticket_form_inherit_installed_services" model="ir.ui.view">
    <field name="name">helpdesk.ticket.form.inherit.installed.services</field>
    <field name="model">helpdesk.ticket</field>
    <field name="inherit_id" ref="helpdesk_sale.helpdesk_ticket_view_form_inherit_helpdesk_invoicing"/>
    <field name="arch" type="xml">

      <xpath expr="//field[@name='sale_order_id']" position="after">
        <field name="installed_service_id" domain="[('site', '=?', site), ('empresarial_group', '=?', empresarial_group)]"/>
      </xpath>

    </field>
  </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="purchase_order_inherit_purchase_order" model="ir.ui.view">
    <field name="name">purchase.order.inherit.purchase.order</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">

      <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/tree[1]/field[@name='taxes_id']" position="after">
        <field name="discount"/>
      </xpath>

    </field>
  </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="installed_services_inherit_service_history" model="ir.ui.view">
    <field name="name">installed.services.inherit.service.history</field>
    <field name="model">installed.services</field>
    <field name="inherit_id" ref="installed_services.installed_services_form"/>
    <field name="arch" type="xml">


        <xpath expr="//field[@name='stage']" position="before">
          <button name="new_history" string="Guardar en Historial" type="object" class="oe_highlight" groups="access_rights_assetel.installed_services_guardar_historial"/>
        </xpath>

        <xpath expr="//div[@name='button_box']" position="inside">
          <button type="object" name="action_view_history" class="oe_stat_button" icon="fa-folder" attrs="{'invisible': [('history_count', '=', 0)]}">
            <field string="Historial" name="history_count" widget="statinfo"/>
          </button>
        </xpath>

    </field>
  </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_crm_inherit_customer_registration" model="ir.ui.view">
    <field name="name">res.config.settings.crm.inherit.customer.registration</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
    <field name="arch" type="xml">

        <xpath expr="//div[@data-string='CRM']" position="inside">
            <h2>Tickets registro de clientes</h2>

            <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                  <span class="o_form_label">Mesa de ayuda CEC</span>
                  <div class="text-muted">
                  Configure la mesa de ayuda donde se crearan los tickets de registro de clientes.
                  </div>
                  <div class="row mt16">
                    <label string="Mesa de ayuda" for="help_desk_team_cec" class="col-lg-3 o_light_label"/>
                    <field name="help_desk_team_cec"/>
                  </div>
                </div>
              </div>
            </div>
        </xpath>

    </field>
  </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- VISTA ARBOL PARA STRATEGIC.OBJECTIVES -->
  <record id="strategic_objectives_tree" model="ir.ui.view">
    <field name="name">strategic.objectives.tree</field> 
    <field name="model">strategic.objectives</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="unidad_de_negocio"/>
        <field name="objetivo"/>
      </tree>
    </field> 
  </record>

  <!-- VISTA FORMULARIO PARA  STRATEGIC.OBJECTIVES -->
  <record id="strategic_objectives_form" model="ir.ui.view"> 
    <field name="name">strategic.objectives.form</field> 
    <field name="model">strategic.objectives</field>
    <field name="arch" type="xml">
      <form string="Objetivos estrategicos">
          <sheet>
              <field name="active" invisible="1"/>
              <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
              <group>
                <div class="oe_title pr-0">
                  <h1 class="d-flex flex-row justify-content-between">
                    <field name="name" class="o_task_name text-truncate" readonly="1" placeholder="Nombre"/>
                  </h1>
                </div>
              </group>                        
              <group>
                <group>
                  <field name="unidad_de_negocio"/>
                  <field name="area"/>
                </group>
                <group>
                  <field name="objetivo"/>
                </group>
              </group>
              <group>
                  <field name="descripcion"/>
              </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
      </form>
    </field> 
  </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_project_inherit_service_unbuild" model="ir.ui.view">
    <field name="name">res.config.settings.project.inherit.service.unbuild</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="project.res_config_settings_view_form"/>
    <field name="arch" type="xml">

        <xpath expr="//div[@data-string='Project']" position="inside">
            <h2>Bajas de servicio</h2>

            <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                  <span class="o_form_label">Proyecto de bajas</span>
                  <div class="text-muted">
                  Configure el proyecto donde se crearan las tareas de bajas de servicio.
                  </div>
                  <div class="row mt16">
                    <label string="Proyecto" for="unbuild_project_id" class="col-lg-3 o_light_label"/>
                    <field name="unbuild_project_id"/>
                  </div>
                </div>
              </div>
            </div>
        </xpath>

    </field>
  </record>

</odoo>
